<UserControl x:Class="Richy_WPF_MVVM.User.ComplexDialogs.GetInputDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Richy_WPF_MVVM.User.ComplexDialogs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical">
        <Label FontSize="36" Background="Yellow" Foreground="Black" Content="Complex Dialog" />

        <Label Content="The value entered here will be shown on Page 1" />
        <TextBox Text="{Binding ComplexDialogTextProperty}" />

        <Button Content="Close" Command="{Binding CloseComplexDialogCommand}" />

    </StackPanel>
</UserControl>
